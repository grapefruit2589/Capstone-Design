CREATE TABLE Elderly (
    elderly_id INT AUTO_INCREMENT PRIMARY KEY,  -- 어르신 고유 ID
    name VARCHAR(100) NOT NULL,                 -- 이름
    password VARCHAR(255) NOT NULL,             -- 비밀번호
    dob DATE,                                  -- 생년월일 (선택사항)
    gender CHAR(1)                             -- 성별 (M: 남성, F: 여성)
);

CREATE TABLE SocialWorker (
    worker_id INT AUTO_INCREMENT PRIMARY KEY,    -- 사회복지사 고유 ID
    name VARCHAR(100) NOT NULL,                   -- 이름
    birth_date DATE,                              -- 생년월일
    email VARCHAR(255) UNIQUE NOT NULL,           -- 이메일
    photo BLOB,                                   -- 사진 (파일 저장 가능)
    password VARCHAR(255) NOT NULL,               -- 비밀번호
    gender CHAR(1) NOT NULL,                      -- 성별 (M: 남성, F: 여성)
    phone VARCHAR(20)                             -- 전화번호
);

CREATE TABLE Elderly_SocialWorker (
    id INT AUTO_INCREMENT PRIMARY KEY,            -- 고유 ID
    elderly_id INT,                               -- 어르신 ID (Elderly 테이블과 연결)
    worker_id INT,                                -- 사회복지사 ID (SocialWorker 테이블과 연결)
    assign_date DATE,                             -- 담당 시작 날짜
    FOREIGN KEY (elderly_id) REFERENCES Elderly(elderly_id),  -- 어르신과 연결
    FOREIGN KEY (worker_id) REFERENCES SocialWorker(worker_id) -- 사회복지사와 연결
);

CREATE TABLE ElderlyActivities (
    activity_id INT AUTO_INCREMENT PRIMARY KEY,    -- 활동 고유 ID
    elderly_id INT,                               -- 어르신 ID (Elderly 테이블과 연결)
    activity_type VARCHAR(100),                    -- 활동 유형 (게임, 퀴즈 등)
    activity_date DATE,                            -- 활동 날짜
    result VARCHAR(100),                           -- 활동 결과 (예: 퀴즈 답, 게임 점수 등)
    FOREIGN KEY (elderly_id) REFERENCES Elderly(elderly_id) -- 어르신과 연결
);
