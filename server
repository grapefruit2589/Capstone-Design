CREATE TABLE MEMBER (
    MEMBER_ID INT AUTO_INCREMENT PRIMARY KEY,      -- 어르신 고유 ID
    MEM_NAME VARCHAR(20) NOT NULL,                 -- 이름
    MEM_GEN CHAR(1) NOT NULL,                      -- 성별(남자M, 여자F)
    MEM_PW VARCHAR(20) UNIQUE NOT NULL, 
    MEM_TEL VARCHAR(20) UNIQUE NOT NULL, 
);

CREATE TABLE SOCIALWORKER (
    SW_ID INT AUTO_INCREMENT PRIMARY KEY,         -- 사회복지사 고유 ID
    SW_NAME VARCHAR(20) NOT NULL,                 -- 이름
    SW_GEN CHAR(1) NOT NULL,                      -- 성별(남자M, 여자,F)
    SW_PW VARCHAR(20) UNIQUE NOT NULL,            -- 비밀번호
    SW_TEL VARCHAR(20) UNIQUE NOT NULL,           -- 전화번호 
    SW_EMAIL VARCHAR(30) UNIQUE,                  -- 이메일      
    SW_BIRTHDAY VARCHAR(20) UNIQUE NOT NULL       -- 생년월일
);

CREATE TABLE SOCIALWORKER_MEMBER (
    SW_ID INT,                                           -- 사회복지사 ID (SOCIALWORKER 테이블과 연결)
    MEMBER_ID INT,                                       -- 어르신 ID (MEMBER 테이블과 연결)
    PRIMARY KEY (SW_ID, MEMBER_ID),                      -- SW_ID와 MEMBER_ID의 복합키로 기본키 설정
    FOREIGN KEY (SW_ID) REFERENCES SOCIALWORKER(SW_ID),  -- 사회복지사와 연결
    FOREIGN KEY (MEMBER_ID) REFERENCES MEMBER(MEMBER_ID) -- 어르신과 연결
);
